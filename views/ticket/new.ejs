<% include ../partials/header %>
<div class="text-center">
    
    
<h1>Add a new Ticket</h1>


<form action="/tickets" method="POST" style="width:30%;" class=" ml-auto mr-auto">
    
    <div class ="form-group">
        <input class="form-control" type="text" name="name" placeholder="Event name">

    </div>

    <div class ="form-group">
        <input class="form-control" type="text" name="description" placeholder="Description">

    </div>
   
    <div class ="form-group">
        <input class="form-control" type="text" name="typeOfTicket" placeholder="VIP, FREE, DISCOUNT e.t.c">

    </div>
   

     <div class ="form-group">
        <input class="form-control" type="number" name="price" placeholder="price" min="0" step="1">

    </div>

    <div class ="form-group">
        <input class="form-control" type="number" name="quantity" placeholder="Quantity" min="1" step="1">

    </div>
    

    <div class ="form-group">
        <input class="btn btn-success btn-block" type="submit">

    </div>

</form>
 <a href="/">Go Back to Homepage</a>
</div>

